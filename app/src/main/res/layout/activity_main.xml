<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E3C1C1">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFEB3B"
        android:text="TF TASK"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnGaleria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GALERIA"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:onClick="abrirGaleria"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
        app:layout_constraintBottom_toTopOf="@id/imageview"></Button>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/resultados"
        app:layout_constraintTop_toBottomOf="@id/btnGaleria"
        tools:layout_editor_absoluteX="10dp"></ImageView>



    <TextView
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/resultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>